<settings xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd"
          xmlns="http://maven.apache.org/SETTINGS/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <localRepository>${env.CI_PROJECT_DIR}/.m2/repository</localRepository>
    <servers>
        <server>
            <id>${env.MAVEN_RELEASE_REPO}</id>
            <username>${env.MAVEN_REPO_USER}</username>
            <password>${env.MAVEN_REPO_PASS}</password>
        </server>
        <server>
            <id>${env.MAVEN_SNAPSHOT_REPO}</id>
            <username>${env.MAVEN_REPO_USER}</username>
            <password>${env.MAVEN_REPO_PASS}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>artifactory</id>
            <repositories>
                <repository>
                    <id>${env.MAVEN_RELEASE_REPO}</id>
                    <name>Maven Release</name>
                    <url>${env.MAVEN_REPO_URL}/${env.MAVEN_RELEASE_REPO}</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>${env.MAVEN_SNAPSHOT_REPO}</id>
                    <name>Maven Snapshot</name>
                    <url>${env.MAVEN_REPO_URL}/${env.MAVEN_SNAPSHOT_REPO}</url>
                    <snapshots/>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>${env.MAVEN_RELEASE_REPO}</id>
                    <name>Maven Release</name>
                    <url>${env.MAVEN_REPO_URL}/${env.MAVEN_RELEASE_REPO}</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
                <pluginRepository>
                    <id>${env.MAVEN_SNAPSHOT_REPO}</id>
                    <name>Maven Snapshot</name>
                    <url>${env.MAVEN_REPO_URL}/${env.MAVEN_SNAPSHOT_REPO}</url>
                    <snapshots/>
                </pluginRepository>
            </pluginRepositories>

            <distributionManagement>
                <repository>
                    <id>${env.MAVEN_RELEASE_REPO}</id>
                    <url>${env.MAVEN_REPO_URL}/${env.MAVEN_RELEASE_REPO}</url>
                </repository>
                <snapshotRepository>
                    <id>${env.MAVEN_SNAPSHOT_REPO}</id>
                    <url>${env.MAVEN_REPO_URL}/${env.MAVEN_SNAPSHOT_REPO}</url>
                </snapshotRepository>
            </distributionManagement>

        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>artifactory</activeProfile>
    </activeProfiles>
</settings>
